(include "notation.neut")

(include "constant/darwin.neut")

(definition string
  (sigma
    ((len u64))
    (array len u8)))

(definition print-string ((str string))
  (destruct str (n content)
    (let len (os:write stdout &content 3))
    (with-type (product string u64)
      (tuple (tuple n content) len))))

