(no-implicit-core)

(include "foundation.neut")

(enum bool
  (true 1)
  (false 0))

(use bool)

(definition bool:as-i1 ((b bool))
  (unsafe-cast bool i1 b))

(definition bool:and ((b1 bool) (b2 bool))
  (unsafe-cast i1 bool (i1.and (as-i1 b1) (as-i1 b2))))

(definition bool:or ((b1 bool) (b2 bool))
  (unsafe-cast i1 bool (i1.or (as-i1 b1) (as-i1 b2))))

(definition bool:not ((b bool))
  (switch b
    (true false)
    (false true)))

(unuse bool)
