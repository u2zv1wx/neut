(no-implicit-core)

(include "foundation.neut")

(section bool)

(enum bool
  (true 1)
  (false 0))

(definition as-i1 ((b bool))
  (unsafe-cast bool i1 b))

(definition and ((b1 bool) (b2 bool))
  (unsafe-cast i1 bool (i1.and (as-i1 b1) (as-i1 b2))))

(definition or ((b1 bool) (b2 bool))
  (unsafe-cast i1 bool (i1.or (as-i1 b1) (as-i1 b2))))

(definition not ((b bool))
  (switch b
    (true false)
    (false true)))

(end bool)
