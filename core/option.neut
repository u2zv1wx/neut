(no-implicit-core)

(include library "core/foundation.neut")

(include library "core/functor.neut")

(include library "core/monad.neut")

(section option)

(inductive option ((a tau))
  (none ()
    (option a))
  (some ((x a))
    (option a)))

(define map
  (witness (functor-form option)
    (lambda (a b f m)
      (option.fold a m
        (lambda (_)
          (option b))
        (lambda ()
          (none b))
        (lambda (x)
          (some b (f x)))))))

(define return
  (witness (return-type option)
    (lambda (a x)
      (some a x))))

(define bind
  (witness (bind-type option)
    (lambda (a b m k)
      (option.fold a m
        (lambda (_)
          (option b))
        (lambda ()
          (none b))
        (lambda (x)
          (k x))))))

(define from-option
  ((a tau)
   (x a)
   (m (option a)))
  (witness a
    (option.fold a m
      (lambda (_)
        a)
      (lambda ()
        x)
      (lambda (y)
        y))))

;; (attribute from-option (implicit 0))

?functor.unfold

?monad.unfold

(define witness-functor
  (witness (functor option)
    (functor.unfold option
      option.map)))

?functor.unfold

?functor.map

(define witness-monad
  (witness (monad option)
    (monad.unfold option
      option.witness-functor
      option.return
      option.bind)))

(end option)
