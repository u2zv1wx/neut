(use bool)

(use i64)

;; 2-mutual definition
(define
  (even (n)
    (if (eq n 0)
      true
      (odd (sub n 1))))
  (odd (n)
    (if (eq n 0)
      false
      (even (sub n 1)))))

(print
  (if (even 10)
    100
    1000))

(print
  (if (odd 10)
    100
    1000))

;; (ballad of) big nothing
(define
  (p0 ((a i64)) (p1 a))
  (p1 ((a i64)) (p2 a))
  (p2 ((a i64)) (p3 a))
  (p3 ((a i64)) (p4 a))
  (p4 ((a i64)) (p5 (i64:add 1 a)))
  (p5 ((a i64)) (p6 a))
  (p6 ((a i64)) a)
  (p7 ((a i64)) (p8 a))
  (p8 ((a i64)) (witness i64 (p9 a)))
  (p9 ((a i64)) (p0 a)))

(print (p7 10))
