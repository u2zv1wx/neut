(let (nat tau) (nat-inner))

(definition nat-helper ((x choice))
  (enum-elimination x
    (left top)
    (right nat)))

(let (foo (nat-inner))
  (sigma-introduction left unit))

(keyword zero)

(notation (zero)
  (sigma-introduction left unit))

(ascription (zero) nat)

(keyword succ)

(notation (succ x)
  (sigma-introduction right x))

;; こうするとあたかもsuccがコンストラクタであるかのようにつかえる。
(let (bar (nat-inner))
  (succ foo))

;; ちゃんと推論できてる。えらい。
(let (buz nat)
  (succ bar))

(ascription bar nat)

(ascription buz nat)

