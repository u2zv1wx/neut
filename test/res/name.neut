(no-implicit-core)

(include library "core/notation.neut")

;; (inductive option ((z tau))
;;   (some ((x z)) (option z)))

(inductive option ((z tau))
  (some ((x i64)) (option z)))

(definition foo ((a tau) (m (option a)))
  (witness i64
    (case m
      ((option:some x) x))))

