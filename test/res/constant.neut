(constant write
  (pi
    ((A type)
     (out file-descriptor)
     (str (array A u8))
     (len (is-enum A)))
    (product (array A u8) i64)))

(constant exit
  (pi
    ((status i64))
    top))

(constant open
  (pi
    ((A type)
     (path (array A u8))
     (flags i64)
     (mode i64))
    (product (array A u8) file-descriptor)))

;; closeは簡単。
(constant close
  (pi
    ((_ file-descriptor))
    i64))

;; darwinではこのforkは定数関数に落ちる。linuxではsyscallになる。
(constant fork
  (pi
    ()
    i64))
